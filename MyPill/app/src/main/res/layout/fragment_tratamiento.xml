<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mypill.mypill.TratamientoFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft = "30dp">

        <Button
            android:id="@+id/BtnInicioTerapia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_add"
            android:drawableLeft="@drawable/add"
            android:onClick="InicioTerapia"
            android:text="Comience con su terapia y aÃ±ada su primer medicamento!"
            android:textAllCaps="false"
            android:textColor="@color/appColor"
            android:textSize="15dp" />

        <ListView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dividerHeight="1dp"
            android:id="@+id/lvListadoTratamiento" />




        
    </LinearLayout>
</FrameLayout>
